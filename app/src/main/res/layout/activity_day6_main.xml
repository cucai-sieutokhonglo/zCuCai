<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adapter_view_day6.Day6MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Item"
        android:id="@+id/edt_new_item"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_new_item"
        android:onClick="addNewItem"
        android:text="Contacts View"/>

    <Button
        android:id="@+id/btn_new_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addNewItem2"
        android:text="Start Custome View" />
    <ListView
        android:id="@+id/lv_lesson"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>